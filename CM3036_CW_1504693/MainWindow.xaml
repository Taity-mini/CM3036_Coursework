<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:CM3036_CW_1504693" mc:Ignorable="d" x:Class="CM3036_CW_1504693.MainWindow"
        Title="CM3036 Coursework" Height="536" Width="788" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="studentViewSource" d:DesignSource="{d:DesignInstance {x:Type local:Student}, CreateList=True}"/>
    </Window.Resources>


    <Grid DataContext="{StaticResource studentViewSource}" Margin="0,10,2,0">
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="12,25,0,0" VerticalAlignment="Top" Width="92"/>
        <TextBox x:Name="firstName" HorizontalAlignment="Left" Height="23" Margin="151,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Margin="12,73,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.211,0.115" Width="71"/>
        <TextBox x:Name="lastName" HorizontalAlignment="Left" Height="23" Margin="151,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Component 1" HorizontalAlignment="Left" Margin="318,21,0,0" VerticalAlignment="Top" Width="92"/>
        <ComboBox x:Name="grade1" HorizontalAlignment="Left" Margin="446,25,0,0" VerticalAlignment="Top" Width="53" SelectedIndex="0">
            <ComboBoxItem Content="A" ContentStringFormat="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
            <ComboBoxItem Content="E"/>
            <ComboBoxItem Content="F"/>
        </ComboBox>
        <Label Content="Component 2:" HorizontalAlignment="Left" Margin="318,66,0,0" VerticalAlignment="Top" Width="86" Height="26"/>
        <ComboBox x:Name="grade2" HorizontalAlignment="Left" Margin="446,66,0,0" VerticalAlignment="Top" Width="53" RenderTransformOrigin="0.125,0.545" SelectedIndex="0">
            <ComboBoxItem  Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
            <ComboBoxItem Content="E"/>
            <ComboBoxItem Content="F"/>
        </ComboBox>
        <Label Content="Component 3:" HorizontalAlignment="Left" Margin="318,107,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="grade3" HorizontalAlignment="Left" Margin="445,111,0,0" VerticalAlignment="Top" Width="54" SelectedIndex="0">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
            <ComboBoxItem Content="E"/>
            <ComboBoxItem Content="F"/>
        </ComboBox>
        <Label x:Name="matriculation" Content="Matriculation Number:" HorizontalAlignment="Left" Margin="12,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.789,-0.038" Width="134"/>
        <TextBox x:Name="matriculationNo" HorizontalAlignment="Left" Height="23" Margin="151,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="121,270,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="addStudent" Content="Add Student" HorizontalAlignment="Left" Margin="539,25,0,0" VerticalAlignment="Top" Width="141" RenderTransformOrigin="-0.933,0.227" Click="onAddStudent"/>
        <Button x:Name="RefreshList" Content="Refresh List" HorizontalAlignment="Left" Margin="539,112,0,0" VerticalAlignment="Top" Width="141" Click="OnRefresh"/>
        <Button x:Name="deleteAllStudents" Content="Delete All Students" HorizontalAlignment="Left" Margin="539,72,0,0" VerticalAlignment="Top" Width="141" Click="onDeleteAllStudents"/>

        <DataGrid x:Name="studentDataGrid" IsSynchronizedWithCurrentItem="false"  CanUserAddRows="False" IsReadOnly="True" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="10,163,10,10"  Background="{x:Null}" OpacityMask="#FFE24343">
          
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="firstNameColumn1" Binding="{Binding firstName}" Header="First Name" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="lastNameColumn1" Binding="{Binding lastName}" Header="Last Name" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="gradeOneColumn1" Binding="{Binding gradeOne}" Header="Grade One" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="gradeTwoColumn1" Binding="{Binding gradeTwo}" Header="Grade Two" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="gradeThreeColumn1" Binding="{Binding gradeThree}" Header="Grade Three" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="gradeOverallColumn1" Binding="{Binding gradeOverall}" Header="Grade Overall" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="matricNumColumn1" Binding="{Binding matricNum}" Header="Matriculation" Width="SizeToHeader"/>
                <DataGridTemplateColumn Header="Edit" Width="80">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                            <Button Content="Edit" Click="OnEditStudent"/>
                        </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Delete" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="OnDeleteStudent" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Green"/>
                     <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
                    </Style.Resources>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding gradeOverall}" Value="F">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding gradeOverall}" Value="E">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </Grid>
</Window>
