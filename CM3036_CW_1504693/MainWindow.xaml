<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:CM3036_CW_1504693" mc:Ignorable="d" x:Class="CM3036_CW_1504693.MainWindow"
        Title="CM3036 Coursework" Height="454" Width="698" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="studentViewSource" d:DesignSource="{d:DesignInstance {x:Type local:Student}, CreateList=True}"/>
    </Window.Resources>


    <Grid DataContext="{StaticResource studentViewSource}" Margin="0,10,0,0">
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="12,25,0,0" VerticalAlignment="Top" Width="92"/>
        <TextBox x:Name="firstName" HorizontalAlignment="Left" Height="23" Margin="151,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Margin="12,73,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.211,0.115" Width="71"/>
        <TextBox x:Name="lastName" HorizontalAlignment="Left" Height="23" Margin="151,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Component 1" HorizontalAlignment="Left" Margin="318,21,0,0" VerticalAlignment="Top" Width="92"/>
        <ComboBox x:Name="grade1" HorizontalAlignment="Left" Margin="446,25,0,0" VerticalAlignment="Top" Width="53" SelectedIndex="0">
            <ComboBoxItem Content="A" ContentStringFormat="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
            <ComboBoxItem Content="E"/>
            <ComboBoxItem Content="F"/>
        </ComboBox>
        <Label Content="Component 2:" HorizontalAlignment="Left" Margin="318,66,0,0" VerticalAlignment="Top" Width="86" Height="26"/>
        <ComboBox x:Name="grade2" HorizontalAlignment="Left" Margin="446,66,0,0" VerticalAlignment="Top" Width="53" RenderTransformOrigin="0.125,0.545" SelectedIndex="0">
            <ComboBoxItem  Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
            <ComboBoxItem Content="E"/>
            <ComboBoxItem Content="F"/>
        </ComboBox>
        <Label Content="Component 3:" HorizontalAlignment="Left" Margin="318,107,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="grade3" HorizontalAlignment="Left" Margin="445,111,0,0" VerticalAlignment="Top" Width="54" SelectedIndex="0">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
            <ComboBoxItem Content="E"/>
            <ComboBoxItem Content="F"/>
        </ComboBox>
        <Label x:Name="matriculation" Content="Matriculation Number:" HorizontalAlignment="Left" Margin="12,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.789,-0.038" Width="134"/>
        <TextBox x:Name="matriculationNo" HorizontalAlignment="Left" Height="23" Margin="151,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="121,270,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="addStudent" Content="Add Student" HorizontalAlignment="Left" Margin="539,25,0,0" VerticalAlignment="Top" Width="141" RenderTransformOrigin="-0.933,0.227" Click="onAddStudent"/>
        <Button x:Name="RefreshList" Content="Refresh List" HorizontalAlignment="Left" Margin="539,112,0,0" VerticalAlignment="Top" Width="141" Click="OnRefresh"/>
        <ListView x:Name="studentListView" ItemsSource="{Binding}" Margin="4,168,0,0" SelectionMode="Single">
            <ListView.ItemContainerStyle>
                <Style>
                    <Setter Property="Control.HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Control.VerticalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="firstNameColumn" Header="First Name" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="True" Margin="6,-1,-6,-1" Text="{Binding firstName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn x:Name="lastNameColumn" Header="Last Name" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="True" Margin="-6,-1" Text="{Binding lastName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn x:Name="gradeOneColumn" Header="Grade One" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="True" Margin="-6,-1" Text="{Binding gradeOne, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn x:Name="gradeTwoColumn" Header="Grade Two" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="True" Margin="-6,-1" Text="{Binding gradeTwo, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn x:Name="gradeThreeColumn" Header="Grade Three" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="True" Margin="-6,-1" Text="{Binding gradeThree, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn x:Name="gradeOverallColumn" Header="Grade Overall" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="True" Margin="-6,-1" Text="{Binding gradeOverall, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn x:Name="matricNumColumn" Header="Matriculation" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox IsReadOnly="True" Margin="-6,-1" Text="{Binding matricNum, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn x:Name="edit" Header="Edit">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit" Click="OnEditStudent"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn x:Name="delete" Header="Delete">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="OnDeleteStudent" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="deleteAllStudents" Content="Delete All Students" HorizontalAlignment="Left" Margin="539,72,0,0" VerticalAlignment="Top" Width="141" Click="onDeleteAllStudents"/>
    </Grid>
</Window>
